pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { 
                  image 'maven:3.8.1-adoptopenjdk-11'
                  args '--name slave-1'
        }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Front-end') {
      agent {
        docker { 
                  image 'node:16-alpine' 
                  args '--name slave-1'
        }
      }
      steps {
        sh 'node --version'
      }
    }
  }
}
